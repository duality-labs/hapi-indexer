// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.238.0/containers/go
{
  "name": "Hapi Indexer Container",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "runArgs": [
    "--env-file=.env",
    "--env-file=.env.local",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.tabSize": 2
      },

      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "qufiwefefwoyn.inline-sql-syntax"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [8000],

  // pass git through and set any other terminals as preferred
  "features": {
    "git": "os-provided"
    // optional features: these increase to post-Dockerfile setup time
    // "fish": "latest",
    // "rust": "1.61.0"
  }
}
